@using WebMarket.Models.AdministrationModels
@model CreateRoleViewModel
@{
    ViewData["Title"] = "Create New Role";
}

<h1>Create New Role</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="RoleName" class="col-sm-2 col-form-label">Role name</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" id="roleName" placeholder="Enter role name" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-success" type="submit">Create Role</button>
        </div>
    </div>
</form>
